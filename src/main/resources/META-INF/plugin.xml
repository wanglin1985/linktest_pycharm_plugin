<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>lin.wang.plugin.lintest</id>
    <name>lintest</name>
    <version>1.1.9</version>

    <vendor email="think_wl@163.com" url="https://github.com/wanglin1985">Wang Lin</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
    <description><![CDATA[
        <p>PyCharm Plugin for lintest Automation Framework</p>
        <p>Convenient execution of lintest (by case/package/tag/suite/case_py_file)</p>
        <p>Convenient add & edit testcase file</p>
    ]]></description>

    <change-notes>
        <![CDATA[
      <p>1.1.9</p>
      <ul>
        <li>Enhance Add Http Request Template Code(base-on lintest framework)</li>
      </ul>
      <p>1.1.8</p>
      <ul>
        <li>Enhance Add Http Request Template Code(support DataSet Mode)</li>
      </ul>
      <p>1.1.7</p>
      <ul>
        <li>Support for quickly add Http Request Template Code</li>
      </ul>
      <p>1.1.6</p>
      <ul>
        <li>Support for quickly crate case&csv template files (dataset).</li>
      </ul>
      <p>1.1.5</p>
      <ul>
        <li>Support for quickly creating case template files.</li>
        <li>Support fast execution of selected pyFile/package/caseName/tag.</li>
        <li>Support batch setting tag for cases in testSuite/caseFile.</li>
      </ul>
    ]]>
    </change-notes>

    <idea-version since-build="213"/>


    <depends>com.intellij.modules.python</depends>
    <depends>com.intellij.modules.pycharm</depends>
    <depends>com.intellij.modules.pycharm.community</depends>
    <depends>com.intellij.modules.python-core-capable</depends>

<!--    <extensions defaultExtensionNs="com.intellij"></extensions>-->

    <actions>
        <action id="com.github.lintest.RunSuite"
                class="com.github.lintest.RunSuite"
                icon="/icons/runSuite.svg"
                text="Run Based On TestSuite"
                description="RunTestTestSuite">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>
        <action id="com.github.lintest.SetTagsByFile"
                class="com.github.lintest.SetTagsByFile"
                icon="/icons/edit.svg"
                text="Set Tags In Batches"
                description="Set Tags">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

        <action id="com.github.lintest.AddHttpRequestDemoCode"
                class="com.github.lintest.AddHttpRequestDemoCode"
                icon="/icons/edit.svg"
                text="Add Http Request Template Code"
                description="Add Http Request Template Code">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>





        <action id="com.github.lintest.RunSelected"
                class="com.github.lintest.RunSelected"
                icon="/icons/selectRun.svg"
                text="Run Based On Selection"
                description="lintest Run Based On Selection">
            <add-to-group group-id="EditorPopupMenu" anchor="first"/>
        </action>

        <action id="com.github.lintest.RunPackage"
                class="com.github.lintest.RunPackage"
                icon="/icons/packageRun.svg"
                text="Run Based On Package"
                description="RunTestPackage">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>

        <action id="com.github.lintest.RunSelectedFile"
                class="com.github.lintest.RunSelectedFile"
                icon="/icons/selectRun.svg"
                text="Run Selected File"
                description="lintest Run Based On Selected File">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>




        <action id="com.github.lintest.CreateCaseFileAndCSV"
                class="com.github.lintest.CreateCaseFileAndCSV"
                icon="/icons/addClass.svg"
                text="New Case and CSV Files In This Package"
                description="CreateTestCaseAndCsvFileInThisPackage">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>

        <action id="com.github.lintest.CreateATestCaseFile"
                class="com.github.lintest.CreateATestCaseFile"
                icon="/icons/addClass.svg"
                text="New TestCase File In This Package"
                description="CreateATestCaseFileInThisPackage">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="first"/>
        </action>


        <action id="com.github.lintest.RunPackageWithInput"
                class="com.github.lintest.RunPackageWithInput"
                icon="/icons/executeSelection_dark.svg"
                text="Run Based On Package With Input"
                description="RunPackageWithInput">
            <add-to-group group-id="ProjectViewPopupMenu" anchor="after"
                          relative-to-action="com.github.lintest.RunPackage"/>
        </action>


        <action id="com.github.lintest.RunWithUI"
                class="com.github.lintest.RunWithUI"
                icon="/icons/executeSelection_dark.svg"
                text="Run Based On Input"
                description="RunTestWithUI">
            <add-to-group group-id="EditorPopupMenu" anchor="after"
                          relative-to-action="com.github.lintest.RunSelected"/>
            <!--            <add-to-group group-id="ProjectViewPopupMenu" anchor="after"-->
            <!--                          relative-to-action="com.github.lintest.RunPackage"/>-->
        </action>
    </actions>

</idea-plugin>